        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AverageRating)
        </dd>


        <h5>
            @Html.DisplayNameFor(model => model.Showtimes) for
            <em>
                @Html.DisplayFor(model => model.Title)
            </em>
        </h5>
        <table class="table table-sm table-striped">
            <tr>
                <th>Showing Date</th>
                <th>Theater</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Special Event?</th>
            </tr>
            @foreach (Showtime showtime in ViewBag.MovieShowtimes)
            {
                if (showtime.ShowingTime >= DateTime.Now)
                {
                    <tr>
                        <td>@showtime.ShowingTime.ToLongDateString()</td>
                        <td>@Html.DisplayFor(modelItem => showtime.Theater)</td>
                        <td>@showtime.StartTime?.ToShortTimeString()</td>
                        <td>@showtime.EndTime?.ToShortTimeString()</td>
                        <td>@Html.DisplayFor(modelItem => showtime.SpecialEvent)</td>
                    </tr>
                }
            }
        </table>

        <h5>
            @Html.DisplayNameFor(model => model.Reviews) for
            <em>
                @Html.DisplayFor(model => model.Title)
            </em>
        </h5>

        <table class="table table-sm table-striped">
            <tr>
                <th>User</th>
                <th>Rating</th>
                <th>Review</th>

            </tr>
            @foreach (Review review in ViewBag.MovieReviews)
            {
                if (review.ReviewStatus == ReviewStatus.Approved)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => review.Customer.Email)</td>
                        <td>@Html.DisplayFor(modelItem => review.Rating)</td>
                        <td>@Html.DisplayFor(modelItem => review.ReviewText)</td>
                    </tr>
                }

            }
        </table>
    </dl>
