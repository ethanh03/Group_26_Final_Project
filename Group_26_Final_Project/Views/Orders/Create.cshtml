@model Group_26_Final_Project.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h2>Create an Order</h2>

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            Transaction Date
            <div class="col-md-10">
                @DateTime.Now
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Purchase Tickets" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

